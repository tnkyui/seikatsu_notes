<div class="container">
<%= render 'layouts/navbar' %>
  <div class="row">
    <div class="col-4 border_sketch">
      <h4 class="headline">在庫更新</h4>
      <div class="form-group p-3">
        <%= form_with model: @stock do |f| %>
          <%= @stock.name %>
          <%= f.number_field :percentage, class: "form-control" %>
          <%= f.number_field :stock_amount, class: "form-control" %>
          <p class="border_sketch">
            notes<br>
            残量は0~100%で設定します。<br>
            ストックは未開封で保存している数を設定します。<br>
          </p>
          <%= f.date_field :purchase_date, class: "form-control" %>

          <%= f.submit "更新", class: "btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
    <div class="col-8 border_sketch">
      <h4 class="headline">在庫編集</h4>
        <%= form_with model: @stock do |f| %>
          <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>


          <label>アラート設定</label>
          <%= f.radio_button :alert_setting, 2 , class: "form-check" %>2日
          <%= f.radio_button :alert_setting, 7 , class: "form-check" %>1週間
          <%= f.radio_button :alert_setting, 14 , class: "form-check" %>2週間
          <%= f.radio_button :alert_setting, 21 , class: "form-check" %>3週間
          <%= f.radio_button :alert_setting, 28 , class: "form-check" %>1ヶ月
          <%= f.radio_button :alert_setting, 0 , class: "form-check" %>設定なし
          <%= f.submit "修正", class: "btn btn-success btn-block" %>
        <% end %>

    </div>
  </div>
</div>